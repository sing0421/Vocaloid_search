// ==UserScript==
// @name         niconico_get_sm
// @namespace    
// @version      1.0
// @description  We get the number of video in niconico.
// @author       sing0421
// @match        http*://*/*
// @grant        none
// @updateURL	 
// @run-at       context-menu
// ==/UserScript==

(function() {
    'use strict';

    var url = location.href.split("/");  
    var sm = url[url.length -2];

    if(sm == "" ) {
        return;
    }
    
    navigator.clipboard.writeText(sm);
    
})();
